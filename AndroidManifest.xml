            android:name="com.csumb.adc.swapping_puzzle.MediumLevel"
            android:label="@string/title_activity_medium_level"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.csumb.adc.swapping_puzzle.HardLevel"
            android:label="@string/title_activity_hard_level"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
    </application>

</manifest>
